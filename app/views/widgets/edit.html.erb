<h1>Editing widget</h1>

<%= error_messages_for :widget %>

<% form_for(@widget) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Belonging</b><br />
    <%= f.text_field :belonging_id %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @widget %> |
<%= link_to 'Back', widgets_path %>
